rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ===== HELPER FUNCTIONS =====

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Only users with role='admin' are admins
    // Everyone else is a scorer (legislative_staff, expert, undergraduate, advanced, general)
    function isAdmin() {
      return getUserData().role == 'admin';
    }

    function hasAccessToBill(billId) {
      let userData = getUserData();
      // Admins have access to all bills
      // Scorers only have access to their assigned bills
      return isAdmin() || userData.assignedBills.hasAny([billId]);
    }

    function canSubmitBill(billId) {
      let userData = getUserData();
      // Must have access to the bill AND not already submitted it
      return hasAccessToBill(billId) &&
             !(billId in userData.completedBills);
    }

    // ===== USERS COLLECTION =====

    match /users/{userId} {
      // Users can read their own profile
      // Admins can read all user profiles
      allow read: if isOwner(userId) || isAdmin();

      // Users can create their own profile during signup
      allow create: if isOwner(userId) &&
                       request.resource.data.email is string &&
                       request.resource.data.firstName is string &&
                       request.resource.data.lastName is string &&
                       request.resource.data.role in ['admin', 'undergraduate', 'advanced', 'expert', 'legislative_staff', 'general'];

      // Users can update their own profile (firstName, lastName, etc.)
      // BUT cannot change security-sensitive fields (role, assignedBills)
      allow update: if isOwner(userId) &&
                       request.resource.data.role == resource.data.role &&
                       request.resource.data.assignedBills == resource.data.assignedBills;

      // No one can delete user profiles
      allow delete: if false;
    }

    // ===== BILLS COLLECTION =====

    match /bills/{billId} {
      // Admins can read all bills
      // Scorers can only read bills assigned to them
      allow read: if isAuthenticated() && hasAccessToBill(billId);

      // Only server-side (Firebase Admin SDK) can write bills
      allow write: if false;
    }

    // ===== SUBMISSIONS COLLECTION =====

    match /submissions/{submissionId} {
      // Users can read their own submissions
      // Admins can read all submissions
      allow read: if isAuthenticated() &&
                     (resource.data.uid == request.auth.uid || isAdmin());

      // Users can create submissions for bills they have access to
      allow create: if isAuthenticated() &&
                       request.resource.data.uid == request.auth.uid &&
                       canSubmitBill(request.resource.data.billId) &&
                       // Validate structure
                       request.resource.data.billId is string &&
                       request.resource.data.answers is map &&
                       request.resource.data.notes is map &&
                       request.resource.data.submissionDate is string;

      // Submissions are immutable after creation
      allow update, delete: if false;
    }

    // ===== DEFAULT DENY =====

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
